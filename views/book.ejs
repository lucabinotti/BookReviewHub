<!doctype html>
<html lang="it">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Recensioni di Libri - <%= book.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">
      <img src="/images/logo.png" class="logo" alt="Logo">
      Recensioni di Libri
    </a>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <% if (user.connected) { %>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Disconnettiti</a>
          </li>
          <li class="nav-item">
            <img src="<%= user.profilePicture %>" class="pro-pic" alt="Profile Picture">
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/register">Registrati</a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<!-- Breadcrumbs -->
<nav aria-label="breadcrumb">
  <ol class="breadcrumb m-3">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page"><%= book.title %></li>
  </ol>
</nav>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <!-- Book Details -->
    <div id="book-details" class="col-12">
      <h2 class="my-4"><%= book.title %></h2>
      <p>
        <strong><%= book.authors.includes(', ') ? 'Autori' : 'Autore' %>:</strong> <%= book.authors %><br>
        <strong><%= book.publishers.includes(', ') ? 'Editori' : 'Editore' %>:</strong> <%= book.publishers %><br>
        <strong>Data di pubblicazione:</strong> <%= book.publish_date %>
      </p>
      <img src="<%= book.cover_path %>" class="img-fluid mb-4" alt="Copertina <%= book.title %>">

      <!-- Recensioni Section -->
      <h3>Recensioni</h3>
      <div id="comments-list">
        <% if (reviews.length === 0) { %>
          <p id="comments-list-empty">Non ci sono ancora recensioni per questo libro.</p>
        <% } else { %>
          <% reviews.forEach(review => { %>
            <div class="review card mb-4">
              <div class="card-body">
                <h5 class="card-title"><%= review.username %> <small class="text-muted"><%= review.datetime %></small></h5>
                <% if (review.comment) { %>
                  <p class="card-text"><%= review.comment %></p>
                <% } %>
                <p class="card-text">Valutazione:
                  <% for (let i = 0; i < review.rate; i++) { %>
                    ★
                  <% } %>
                  <% for (let i = review.rate; i < 5; i++) { %>
                    ☆
                  <% } %>
                </p>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>

      <!-- Comment Button / Message -->
      <% if (user.connected) { %>
        <form id="add-comment-form" action="/add-comment" method="POST" class="mt-4">
          <div class="mb-3">
            <label for="comment" class="form-label">Scrivi un commento</label>
            <textarea class="form-control" id="comment" name="comment" rows="3" required></textarea>
          </div>
          <div class="mb-3">
            <label for="rate" class="form-label">Valutazione</label>
            <select class="form-select" id="rate" name="rate" required>
              <option value="5">★★★★★</option>
              <option value="4">★★★★☆</option>
              <option value="3">★★★☆☆</option>
              <option value="2">★★☆☆☆</option>
              <option value="1">★☆☆☆☆</option>
            </select>
          </div>
          <input id="isbn" type="hidden" name="isbn" value="<%= book.isbn %>">
          <button id="comment-button" type="submit" class="btn btn-primary">Invia Commento</button>
        </form>
      <% } else { %>
        <p class="mt-4 text-danger">Effettua l'accesso per aggiungere un commento.</p>
      <% } %>
    </div>
  </div>
</div>

<!-- Footer -->
<footer class="bg-dark py-3 mt-4"></footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/javascripts/add_comment.js"></script>
</body>
</html>
