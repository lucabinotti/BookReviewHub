<!doctype html>
<html lang="it">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Recensioni di Libri - Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="css/styles.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <img src="images/logo.png" class="logo" alt="Logo">
        Recensioni di Libri
      </a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="">Home</a>
          </li>
          <% if (user.connected) { %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Disconnettiti</a>
            </li>
            <li class="nav-item">
              <img src="<%= user.profilePicture %>" class="pro-pic" alt="Profile Picture">
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Registrati</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Jumbotron -->
  <div class="jumbotron text-center bg-light p-5">
    <h1 class="display-4">Benvenuto su Recensioni di Libri</h1>
    <p class="lead">Cerca recensioni di libri e condividi le tue opinioni con altri lettori.</p>
    <form class="d-flex justify-content-center" action="/search-title" method="GET">
      <input id="search-field" class="form-control me-2" type="search" placeholder="Cerca un libro..." aria-label="Cerca" name="title" list="suggestions">
      <datalist id="suggestions"></datalist>
      <button class="btn btn-primary" type="submit">Cerca</button>
    </form>
  </div>

  <!-- Sezione Libri Più Commentati -->
  <div class="container">
    <h2 class="my-4">Libri Più Commentati</h2>
    <div class="row">
      <% for(const [isbn, book] of Object.entries(books)) { %>
        <div class="col-md-4">
          <div class="card mb-4">
            <img src="<%= book.cover_path %>" class="book-cover" alt="Copertina <%= book.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-text">
                <% if (book.authors.includes(', ')) { %>
                  Autori:
                <% } else { %>
                  Autore:
                <% } %>
                <%= book.authors %>
              </p>
              <a href="/books/<%= isbn %>" class="btn btn-primary">Leggi le Recensioni</a>
            </div>
          </div>
        </div>
      <% } %>

    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark py-3 mt-4"></footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/javascripts/autocomplete_title.js"></script>
</body>
</html>
